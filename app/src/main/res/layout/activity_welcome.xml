<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".view.WelcomeActivity">

    <ImageView
        android:id="@+id/dark_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_logodark"/>

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:text="@string/ol_bem_vindo"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="45sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dark_logo" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="336dp"
        android:layout_height="101dp"
        android:layout_marginTop="30dp"
        android:text="@string/paragraph_description"
        android:textAlignment="textStart"
        android:textSize="22sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_welcome" />
    <Button
        android:id="@+id/button_logIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#fff"
        android:backgroundTint="@color/colorAccent"
        android:text="ComeÃ§ar"
        android:textSize="20sp"
        android:drawableEnd="@drawable/ic_chevron_right_light_24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>